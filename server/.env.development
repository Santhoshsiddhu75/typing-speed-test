# Development Environment Configuration
# Copy this to .env for local development

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001

# JWT Configuration - Development secrets (NOT for production!)
JWT_SECRET=dev-jwt-secret-key-min-32-chars-for-development-only
JWT_REFRESH_SECRET=dev-refresh-secret-key-min-32-chars-for-development-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=10

# Google OAuth Configuration (optional - get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration
DATABASE_PATH=./database.sqlite

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins for development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4173

# Logging Configuration
LOG_LEVEL=debug

# Security Headers (relaxed for development)
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'"

# Development Security Flags
HTTPS_ONLY=false
SECURE_COOKIES=false
TRUST_PROXY=false