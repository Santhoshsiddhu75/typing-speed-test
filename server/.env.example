# Environment Configuration for Typing Speed Test Server
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3001

# JWT Configuration - CRITICAL: Generate strong random secrets for production
# Use: openssl rand -hex 64
JWT_SECRET=your-super-secure-64-character-jwt-secret-replace-this-in-production
JWT_REFRESH_SECRET=your-super-secure-64-character-refresh-secret-replace-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# Google OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration
DATABASE_PATH=./database.sqlite

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'"

# Production Security Flags
HTTPS_ONLY=true
SECURE_COOKIES=true
TRUST_PROXY=false